<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#80FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="-5dp">

        <TextView
            android:id="@+id/Contact_item_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TEXT"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/ContactItemCardViewForImage"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>


        <TextView
            android:id="@+id/Contact_item_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TEXT"
            android:layout_below="@id/Contact_item_display_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/ContactItemCardViewForImage"
            android:textSize="12sp">

        </TextView>

        <TextView
            android:id="@+id/Contact_item_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TEXT"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="#434343"
            android:textSize="12sp">

        </TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ContactItemCardViewForImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="55dp">


            <ImageView
                android:id="@+id/Contact_item_contact_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop">
            </ImageView>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@id/ContactItemCardViewForImage"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-5dp"
            android:layout_toEndOf="@id/ContactItemCardViewForImage"
            android:background="@color/light_gray"
            android:backgroundTint="@color/light_gray" />


    </RelativeLayout>


</RelativeLayout>